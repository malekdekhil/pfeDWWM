@page
@model ChangePasswordModel
@{
    ViewData["Title"] = "Modifier mon mot de passe";
    ViewData["ActivePage"] = ManageNavPages.ChangePassword;
}
<section class="container" id="sectionAccountGlobal">
    <h4 class="text-center">@ViewData["Title"]</h4>

    <partial name="_StatusMessage" for="StatusMessage" />

    <div class="row d-flex justify-content-center align-items-sm-start py-xl-5 h-100">
        <div class="col-md-6   w-100">

            <form id="change-password-form" method="post">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <div class="form-group">
                    <label asp-for="Input.OldPassword"></label>
                    <input asp-for="Input.OldPassword" class="form-control" />
                    <span asp-validation-for="Input.OldPassword" class="text-danger "></span>
                </div>
                <div class="form-group">
                    <label asp-for="Input.NewPassword"></label>
                    <input asp-for="Input.NewPassword" class="form-control" />
                    <span asp-validation-for="Input.NewPassword"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Input.ConfirmPassword"></label>
                    <input asp-for="Input.ConfirmPassword" class="form-control" />
                    <span asp-validation-for="Input.ConfirmPassword" class="text-danger"></span>
                </div>
                <p class="text-center">
                    <button type="submit" class="btn btn-outline-dark btnRadiusBorderOn mt-2">Modifier</button>

                </p>
            </form>
        </div>
    </div>
</section>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}