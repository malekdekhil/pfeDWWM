@model IEnumerable<Domains.OrderItem>

@{
    ViewData["Title"] = "History";
}

<section id="sectionHistory">
    @if (Model.Count() > 0)
    {
        @foreach (var i in Model.ToList())
        {
            <table class="tableHistory">
                <thead>
                    <tr class="trHistory">
                        <th class="thHisotry">Nom du Produit</th>
                        <th class="thHisotry">Quantités</th>
                        <th class="thHisotry">Prix</th>
                    </tr>
                </thead>

                <tr class="trHistory">
                    <td class="tdHisotry">@i.ProductName</td>
                    <td class="tdHisotry">@i.Quantity.ToString()</td>
                    <td class="tdHisotry">@i.Price.ToString()</td>
                </tr>



            </table>



        }

    }
    else
    {
        <p>pas d'achat</p>


    }
</section>